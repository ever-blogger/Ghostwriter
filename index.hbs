{{!< default}}

<div class="wrapper">
    <header class="flex flex-wrap items-center mb-20">
        <article class="w-full md:w-1/2 md:pr-5">
            <h1 class="text-6xl font-bold mb-5">Hello World!</h1>
            <p>{{@site.description}}</p>
        </article>

        <img class="w-full pt-10 md:pt-0 md:w-1/2 md:pl-5"
             srcset="{{img_url @site.cover_image size="s"}} 300w,
                            {{img_url @site.cover_image size="m"}} 600w,
                            {{img_url @site.cover_image size="l"}} 1000w,
                            {{img_url @site.cover_image size="xl"}} 2000w"
             sizes="(max-width: 1000px) 400px, 800px"
             src="{{img_url feature_image size="m"}}"
             alt="{{@site.title}}"
             loading="lazy"
        />
    </header>

    <section>
        <nav>
            <h2 class="text-5xl font-bold mb-5">Topics</h2>
            {{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
                {{#foreach tags}}
                    {{> "nav-item"}}
                {{/foreach}}
            {{/get}}
        </nav>

        {{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
            {{#foreach tags}}
                <div class="posts flex flex-wrap {{#has number="1"}}{{else}}hidden{{/has}}" id="{{slug}}-posts">
                    {{#get "posts" include="tags" limit=5 filter="tag:{{slug}}"}}
                        {{#foreach posts}}
                            {{> "post-card"}}
                        {{/foreach}}

                    {{/get}}
                    <div class="w-full md:w-1/2 lg:w-1/3 p-5 text-center">
                        <div class="h-0 md:h-40 lg:h-30 w-full"></div>
                        <p class="text-7xl text-primary"><i class="fas fa-binoculars"></i></p>
                        <p class="text-2xl font-bold mb-5">Looking for more?</p>
                        <a class="button text-white bg-primary" href="{{url}}">Browse articles</a>
                    </div>
                </div>
            {{/foreach}}
        {{/get}}
    </section>
</div>
