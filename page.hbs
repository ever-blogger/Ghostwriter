{{!< default}}

{{#page}}
    <article class="{{page_class}}">
        <header class="mb-10">
            <article class="w-full">
                <p class="mb-5"><a href="/" class="hover:text-blue-400">Home</a> <i class="inline-block mx-2 fa fa-angle-right"></i> <a class="hover:text-blue-400" href="{{primary_tag.url}}">{{primary_tag.name}}</a></p>
                <h1 class="text-5xl font-bold mb-5 leading-tight">{{title}}</h1>

                {{#if custom_excerpt}}
                    <p class="mb-5">{{custom_excerpt}}</p>
                {{/if}}
            </article>

            {{#if feature_image}}
                <img class="w-full pt-10"
                     srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                     sizes="(max-width: 1000px) 400px, 800px"
                     src="{{img_url feature_image size="m"}}"
                     alt="{{title}}"
                     loading="lazy"
                />
            {{/if}}
        </header>

        <main class="content max-w-prose mx-auto mb-10">
            {{content}}
        </main>
    </article>
{{/page}}
