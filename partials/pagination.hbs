<nav class="mt-10 flex justify-between hide-if-suffix-is-1-{{pages}}">
    {{#if prev}}
        <a href="{{page_url prev}}" class="button bg-primary">Older posts</a>
    {{else}}
        <a class="button bg-gray-100" disabled="disabled">Older Posts</a>
    {{/if}}
    <span>Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a href="{{page_url next}}" class="bg-primary">Newer posts</a>
    {{else}}
        <a class="button bg-gray-100" disabled="disabled">Newer Posts</a>
    {{/if}}
</nav>

