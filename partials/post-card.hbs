<div class="w-full md:w-1/2 lg:w-1/3 py-5 md:px-5">
    <article class="{{post_class}} rounded-md border shadow-md transform transition-all hover:scale-105">
        {{#if feature_image}}
            <a class="block h-56 w-full rounded-t-md bg-cover bg-center mb-2"
               style="background-image: url('{{img_url feature_image size="m"}}')" href="{{url}}"></a>
        {{else}}
            <a class="block h-56 w-full rounded-t-md bg-gradient-to-br from-primary to-white mb-2" href="{{url}}"></a>
        {{/if}}

        {{#if primary_tag}}
            <div class="p-5 pt-2 pb-0">
                <a href="{{primary_tag.url}}" class="inline-block mr-2 text-primary text-sm mb-2">{{primary_tag.name}}</a>
            </div>
        {{/if}}


        <a class="block p-5 pt-0" href="{{url}}">
            <h3 class="text-2xl font-bold mb-2">{{title}}</h3>
            <p>{{ excerpt }}</p>
        </a>
    </article>
</div>
